{% extends 'base.html.twig' %}

{% block title %}LISTE PARENTS
{% endblock %}

{% block body %}

	<div class="row my-5">

		<div class="col-md-12 mx-auto">
			<h1>Liste des parents</h1>
			<div class="card">

				{% if parents  %}
					<button type="button" class="btn btn-warning" data-toggle="collapse" data-target="#demo">
						RECHERCHE AVANCÉE
					</button>
					<div id="demo" class="collapse">
						<form class="form-inline" method="post">

							<div class="form-group">

								<input type="text" class="form-control" id="motCles" placeholder="Search" name="motCles">&ensp;
							</div>
							<label class="radio-inline">
								<input type="radio" name="optradio" value='1' checked>&ensp;Nom Famille
							</label>&ensp;
							<label class="radio-inline">
								<input type="radio" name="optradio" value='2'>&ensp;N°Inscription
							</label>&ensp;
							<label class="radio-inline">
								<input type="radio" name="optradio" value='3'>&ensp;Gsm
							</label>&ensp;
							<input type="submit" value="Rechercher">
						</form>
					</div>


					<table class="table table-dark">
						<thead>
							<tr>
								<th>N°Inscription</th>
								<th>Nom</th>
								<th>Prénom</th>
								<th>Frais d'inscription </th>
								<th>Gsm</th>
								<th>Email</th>
								{# <th>Nom(mere)</th>
																																																																																																																																																<th>Prenom(mere)</th> #}

								<th class="text-center">Show | Update | Delete</th>
							</tr>
						</thead>
						<tbody>
							{% for parent in parents %}
								<tr>
									<td>{{ "%04d" | format(parent.id)}}</td>
									<td>{{ parent.nomFamille }}</td>
									<td>{{ parent.prenomPere }}</td>
									<td>{{ parent.totalPaiement }} €</td>
									<td>0{{ parent.gsmPere }}</td>
									<td>{{ parent.email }}</td>
									{# <td>{{ parent.nomFamilleMere }}</td>
																																																																																																																																																																		<td>{{ parent.prenomMere }}</td> #}
									<td class="text-center">
										<a href="{{ path('parent_edit',{id: parent.id})}}" class="btn btn-sm btn-primary">
											<i class="fa fa-eye"></i>
										</a>
										<a href="{{ path('parent_update',{ id: parent.id})}}" class="btn btn-sm btn-warning">
											<i class="fa fa-edit"></i>
										</a>
										<a href="{{ path('parent_delete',{ id: parent.id})}}" class="btn btn-sm btn-danger">
											<i class="fa fa-trash"></i>
										</a>
									</td>

								</tr>
							{% endfor %}
						</tbody>
					</table>


				{% endif %}
			</div>
		</div>
	</div>

{% endblock %}
